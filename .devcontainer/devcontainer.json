{
    "name": "JTAG Hardware Lab",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/python:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "webfreak.debug", // For GDB visualization
                "marus25.cortex-debug"
            ]
        }
    },
    "forwardPorts": [3333, 8000, 1234], // 3333: OpenOCD/GDB, 8000: Your App UI, 1234: QEMU GDB Stub
    "portsAttributes": {
        "8000": { "label": "JTAG Dashboard", "onAutoForward": "openPreview" },
        "3333": { "label": "GDB Server" }
    },
    "postCreateCommand": "pip install -r requirements.txt && chmod +x scripts/start_emu.sh"
}